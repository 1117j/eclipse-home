package ex;

public class User extends Mco {

	private String name; 		// 유저의 이름
	private String pw;   		// 유저의 비밀번호
	private int countOfPost;	// 유저의 글 개수
	
	// 초기화
	public User(int id ,String name, String pw, int countOfPost) {
		super(id);
		this.name=name;
		this.pw=pw;
		this.countOfPost=countOfPost;
	}

	
	public void view() {
		view();
		System.out.println("이    름 : "+this.name);
		System.out.println("비밀번호 : "+this.pw);
		System.out.println("작성한 글 개수 : "+this.countOfPost);
	}


	public String getName() {
		return name;
	}


	public void setName(String name) {
		this.name = name;
	}


	public String getPw() {
		return pw;
	}


	public void setPw(String pw) {
		this.pw = pw;
	}


	public int getCountOfPost() {
		return countOfPost;
	}


	public void setCountOfPost(int countOfPost) {
		this.countOfPost = countOfPost;
	}
	
	
	
}
